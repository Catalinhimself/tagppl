<%- include ("partials/header") %>  
<hr>
<img src="<%= !viewuser.avatar?"/img/avatar.png":viewuser.avatar %>" alt="">
<p><%= viewuser.username %> </p>
<hr>
<form action="/profiles/<%= viewuser._id %>" method="POST">
<input type="radio" name="tag" value="friend">
<label for="">Friend</label>
<input type="radio" name="tag" value="aquaintence">
<label for="">Aquaintence</label>
<input type="radio" name="tag" value="enemy">
<label for="">Enemy</label>
<button>Add</button>
</form>
<hr>
<a href="/profiles/<%= viewuser._id %>/tagged/all">tagged</a>
<a href="/profiles/<%= viewuser._id %>/taggedby/all">taggedby</a>
<hr>
<a href="/profiles/<%= viewuser._id %>/tagged/all">all</a>
<a href="/profiles/<%= viewuser._id %>/tagged/friend">friend</a>
<a href="/profiles/<%= viewuser._id %>/tagged/aquaintence">aquaintence</a>
<a href="/profiles/<%= viewuser._id %>/tagged/enemy">enemy</a>
<hr>
<% linkslist.forEach((user)=>{ %>

                <div>
                    <img src="<%= !user.avatar?"/img/avatar.png":user.avatar %>" alt="">
                    <br>
                      
                          <% user[view].forEach(element=>{%>
                              <% if(element._id == viewuser._id){ %>
                                     <h3><%= element.tag %> </h3>   
                              <% }; %> 
                          <%  }); %> 
                      
                    <a href="/profiles/<%= user._id %>/tagged/all"><%= user.username %></a>
                </div>

  <hr>
<% }); %> 
<%- include ("partials/footer") %>  